<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/shape_simple_weather_item"
  >

  <RelativeLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    >

  <com.chenbing.oneweather.CustomViews.TextView.NormalTextView
    android:id="@+id/time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:text="17:00"
    />

  <com.chenbing.oneweather.CustomViews.TextView.NormalBoldTextView
    android:id="@+id/city_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/time"
    android:layout_marginTop="5dp"
    android:textColor="@color/white"
    android:textSize="28sp"
    tools:text="旧金山"
    />

  <com.chenbing.oneweather.CustomViews.TextView.NormalTextView
    android:id="@+id/temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:textColor="@color/white"
    android:textSize="46sp"
    tools:text="3°"
    />

  </RelativeLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:layout_below="@+id/container"
    android:background="@color/gray_ba"
    />
</RelativeLayout>